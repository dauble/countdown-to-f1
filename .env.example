# Yoto OAuth Credentials (get these from https://yoto.dev)
YOTO_CLIENT_ID=your_client_id_here
YOTO_CLIENT_SECRET=your_client_secret_here

# Cloudflare Worker Integration (optional - for auto-refresh feature)
# Set to 'true' to enable fetching data from Cloudflare Worker instead of OpenF1 API directly
USE_CLOUDFLARE_WORKER=false
# Your deployed Cloudflare Worker URL
CLOUDFLARE_WORKER_URL=https://f1-yoto-myo-worker.your-subdomain.workers.dev

# Webhook Secret (optional - for automated refresh via webhook)
# Generate a strong random string for this secret
# Used to authenticate webhook calls from external services (cron jobs, etc.)
WEBHOOK_SECRET=your_random_secret_here

# Note: No other configuration needed!
# The app automatically detects the correct URL at runtime using request headers.
